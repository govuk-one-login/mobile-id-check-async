{
  "name": "helper-scripts",
  "version": "1.0.0",
  "description": "Scripts for deploying, updating and deleting AWS SAM stacks",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "node dist/index.js",
    "manageStacks": "npm run build --silent && npm run start --silent",
